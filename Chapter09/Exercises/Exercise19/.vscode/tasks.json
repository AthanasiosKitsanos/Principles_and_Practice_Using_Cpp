{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Run temp_stats",
        "type": "process",
        "command": "${workspaceFolder}/build/temp_stats.exe",
        "group": {
            "kind": "build",
            "isDefault": false
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true,
            "panel": "dedicated",
            "showReuseMessage": true,
            "clear": true
        }
    },
    {
        "label": "Run store_temps",
        "type": "process",
        "command": "${workspaceFolder}/build/store_temps.exe",
        "group": {
            "kind": "build",
            "isDefault": false
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true,
            "panel": "dedicated",
            "showReuseMessage": true,
            "clear": true
        }
    },
    {
        "label": "Build temp_stats",
        "type": "process",
        "command": "g++",
        "args": [
            "-g",
            "object/temp_stats.o",
            "object/readings.o",
            "-o",
            "build/temp_stats.exe"
        ],
        "group": "build"
    },
    {
        "label": "Build store_temps",
        "type": "process",
        "command": "g++",
        "args": [
            "-g",
            "object/store_temps.o",
            "object/readings.o",
            "-o",
            "build/store_temps.exe"
        ],
        "group": "build",
        "problemMatcher": []
    },
    {
        "label": "PCH",
        "type": "process",
        "command": "g++",
        "args": [
            "-x",
            "c++-header",
            "includes/pch.h"
        ],
        "group": "build"
    },
    {
        "label": "Temp Stats",
        "type": "process",
        "command": "g++",
        "args": [
            "-g",
            "-c",
            "-O2",
            "-Iincludes",
            "-Imodels",
            "temp_stats.cpp",
            "-o",
            "object/temp_stats.o"
        ],
        "group": "build"
    },
    {
        "label": "Store Temps",
        "type": "process",
        "command": "g++",
        "args": [
            "-g",
            "-c",
            "-O2",
            "-Iincludes",
            "-Imodels",
            "store_temps.cpp",
            "-o",
            "object/store_temps.o"
        ],
        "group": "build"
    },
    {
        "label": "Readings",
        "type": "process",
        "command": "g++",
        "args": [
            "-g",
            "-c",
            "-O2",
            "-Iincludes",
            "-Imodels",
            "models/readings.cpp",
            "-o",
            "object/readings.o"
        ],
        "group": "build"
    }
]
}