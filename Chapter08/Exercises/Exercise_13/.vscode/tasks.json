{
  "version": "2.0.0",
  "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/build/run.exe",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },

        {
            "label": "Link",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/obj/main.o",
                "-L${workspaceFolder}/library",
                "-lrational",
                "-L${workspaceFolder:lib}",
                "-lcustomlib",
                "-o",
                "${workspaceFolder}/build/run.exe"
            ],
            "group": "build"
        },

        {
            "label": "PCH",
            "type": "shell",
            "command": "g++",
            "args": [
                "-x",
                "c++-header",
                "${workspaceFolder}/includes/pch/pch.h",
                "-o",
                "${workspaceFolder}/includes/pch/pch.h.gch"
            ],
            "group": "build"
        },

        {
            "label": "Library",
            "type": "shell",
            "command": "ar",
            "args": [
                "rcs",
                "library/rational.lib",
                "${workspaceFolder}/obj/rational.o"
            ],
            "group": "build"
        },

        {
            "label": "Main",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-c",
                "${workspaceFolder}/src/main.cpp",
                "-I${workspaceFolder}/includes",
                "-o",
                "${workspaceFolder}/obj/main.o"
            ],
            "group": "build"
        },

        {
            "label": "Rational",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-c",
                "${workspaceFolder}/src/models/rational.cpp",
                "-I${workspaceFolder}/includes",
                "-o",
                "${workspaceFolder}/obj/rational.o"
            ],
            "group": "build"
        }
    ]
}