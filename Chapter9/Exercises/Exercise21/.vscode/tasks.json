{
  "version": "2.0.0",
  "tasks":
    [
        {
            "label": "Run",
            "type": "process",
            "command": "build/run.exe",
            "group":
            {
                "kind": "build",
                "isDefault": true
            },
            "presentation":
            {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },

        {
            "label": "Build",
            "type": "process",
            "command": "g++",
            "args":
            [
                "obj/*.o",
                "-o",
                "build/run.exe"
            ],
            "group": "build"
        },

        {
            "label": "Main",
            "type": "process",
            "command": "g++",
            "args":
            [
                "-c",
                "-O2",
                "-Imodels",
                "main.cpp",
                "-o",
                "obj/main.o"
            ],
            "group": "build"
        },

        {
            "label": "Roman Int",
            "type": "process",
            "command": "g++",
            "args":
            [
                "-c",
                "-O2",
                "models/roman_int.cpp",
                "-o",
                "obj/roman_int.o"
            ],
            "group": "build"
        }
    ]
}